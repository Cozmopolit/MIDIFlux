{
  "ProfileName": "Basic MIDI Output Examples",
  "Description": "Simple MIDI output examples - send notes, control changes, and other MIDI messages to external devices",
  "MidiDevices": [
    {
      "DeviceName": "*",
      "Description": "Any MIDI input device - triggers MIDI output to specified devices",
      "Mappings": [
        {
          "Id": "send-note-on",
          "Description": "Send Note On to Launchpad",
          "InputType": "NoteOn",
          "Channel": 1,
          "Note": 36,
          "Action": {
            "$type": "MidiOutputConfig",
            "OutputDeviceName": "Launchpad Pro",
            "Commands": [
              {
                "MessageType": "NoteOn",
                "Channel": 1,
                "Data1": 60,
                "Data2": 127
              }
            ],
            "Description": "Light up pad 60 on Launchpad Pro"
          }
        },
        {
          "Id": "send-note-off",
          "Description": "Send Note Off to Launchpad",
          "InputType": "NoteOff",
          "Channel": 1,
          "Note": 36,
          "Action": {
            "$type": "MidiOutputConfig",
            "OutputDeviceName": "Launchpad Pro",
            "Commands": [
              {
                "MessageType": "NoteOff",
                "Channel": 1,
                "Data1": 60,
                "Data2": 0
              }
            ],
            "Description": "Turn off pad 60 on Launchpad Pro"
          }
        },
        {
          "Id": "send-control-change",
          "Description": "Send Control Change to synthesizer",
          "InputType": "ControlChange",
          "Channel": 1,
          "ControllerNumber": 1,
          "Action": {
            "$type": "MidiOutputConfig",
            "OutputDeviceName": "Roland JV-1000",
            "Commands": [
              {
                "MessageType": "ControlChange",
                "Channel": 1,
                "Data1": 7,
                "Data2": 100
              }
            ],
            "Description": "Set volume (CC7) to 100 on Roland synth"
          }
        },
        {
          "Id": "send-program-change",
          "Description": "Send Program Change",
          "InputType": "NoteOn",
          "Channel": 1,
          "Note": 37,
          "Action": {
            "$type": "MidiOutputConfig",
            "OutputDeviceName": "Roland JV-1000",
            "Commands": [
              {
                "MessageType": "ProgramChange",
                "Channel": 1,
                "Data1": 42,
                "Data2": 0
              }
            ],
            "Description": "Change to program 42 on Roland synth"
          }
        },
        {
          "Id": "send-pitch-bend",
          "Description": "Send Pitch Bend",
          "InputType": "NoteOn",
          "Channel": 1,
          "Note": 38,
          "Action": {
            "$type": "MidiOutputConfig",
            "OutputDeviceName": "Roland JV-1000",
            "Commands": [
              {
                "MessageType": "PitchBend",
                "Channel": 1,
                "Data1": 0,
                "Data2": 100
              }
            ],
            "Description": "Send pitch bend up on Roland synth"
          }
        },
        {
          "Id": "send-aftertouch",
          "Description": "Send Aftertouch",
          "InputType": "NoteOn",
          "Channel": 1,
          "Note": 39,
          "Action": {
            "$type": "MidiOutputConfig",
            "OutputDeviceName": "Roland JV-1000",
            "Commands": [
              {
                "MessageType": "Aftertouch",
                "Channel": 1,
                "Data1": 60,
                "Data2": 80
              }
            ],
            "Description": "Send aftertouch for note 60 on Roland synth"
          }
        },
        {
          "Id": "send-channel-pressure",
          "Description": "Send Channel Pressure",
          "InputType": "NoteOn",
          "Channel": 1,
          "Note": 40,
          "Action": {
            "$type": "MidiOutputConfig",
            "OutputDeviceName": "Roland JV-1000",
            "Commands": [
              {
                "MessageType": "ChannelPressure",
                "Channel": 1,
                "Data1": 90,
                "Data2": 0
              }
            ],
            "Description": "Send channel pressure 90 on Roland synth"
          }
        },
        {
          "Id": "send-multiple-commands",
          "Description": "Send multiple MIDI commands at once",
          "InputType": "NoteOn",
          "Channel": 1,
          "Note": 41,
          "Action": {
            "$type": "MidiOutputConfig",
            "OutputDeviceName": "Launchpad Pro",
            "Commands": [
              {
                "MessageType": "NoteOn",
                "Channel": 1,
                "Data1": 60,
                "Data2": 127
              },
              {
                "MessageType": "NoteOn",
                "Channel": 1,
                "Data1": 62,
                "Data2": 100
              },
              {
                "MessageType": "NoteOn",
                "Channel": 1,
                "Data1": 64,
                "Data2": 80
              }
            ],
            "Description": "Light up multiple pads with different velocities"
          }
        },
        {
          "Id": "send-sysex-message",
          "Description": "Send SysEx message",
          "InputType": "NoteOn",
          "Channel": 1,
          "Note": 42,
          "Action": {
            "$type": "MidiOutputConfig",
            "OutputDeviceName": "Launchpad Pro",
            "Commands": [
              {
                "MessageType": "SysEx",
                "Channel": 1,
                "Data1": 0,
                "Data2": 0,
                "SysExData": [240, 0, 32, 41, 2, 16, 14, 0, 247]
              }
            ],
            "Description": "Send Launchpad Pro reset SysEx message"
          }
        }
      ]
    }
  ]
}
