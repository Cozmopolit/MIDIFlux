{
  "ProfileName": "Test Profile for Action Factory",
  "Description": "Sample profile to test the unified action factory implementation",
  "Mappings": [
    {
      "Id": "test-key-press",
      "Description": "Test key press mapping",
      "InputType": "NoteOn",
      "DeviceName": "*",
      "Channel": 1,
      "Note": 60,
      "Action": {
        "$type": "KeyPressReleaseConfig",
        "VirtualKeyCode": 65,
        "Description": "Press A key"
      }
    },
    {
      "Id": "test-mouse-click",
      "Description": "Test mouse click mapping",
      "InputType": "NoteOn",
      "DeviceName": "*",
      "Channel": 1,
      "Note": 61,
      "Action": {
        "$type": "MouseClickConfig",
        "Button": "Left",
        "Description": "Left mouse click"
      }
    },
    {
      "Id": "test-delay",
      "Description": "Test delay mapping",
      "InputType": "NoteOn",
      "DeviceName": "*",
      "Channel": 1,
      "Note": 62,
      "Action": {
        "$type": "DelayConfig",
        "Milliseconds": 500,
        "Description": "Wait 500ms"
      }
    },
    {
      "Id": "test-sequence",
      "Description": "Test sequence mapping",
      "InputType": "NoteOn",
      "DeviceName": "*",
      "Channel": 1,
      "Note": 63,
      "Action": {
        "$type": "SequenceConfig",
        "SubActions": [
          {
            "$type": "KeyPressReleaseConfig",
            "VirtualKeyCode": 67,
            "Description": "Press C key"
          },
          {
            "$type": "DelayConfig",
            "Milliseconds": 100,
            "Description": "Wait 100ms"
          },
          {
            "$type": "KeyPressReleaseConfig",
            "VirtualKeyCode": 68,
            "Description": "Press D key"
          }
        ],
        "ErrorHandling": "ContinueOnError",
        "Description": "Press C, wait, press D"
      }
    },
    {
      "Id": "test-conditional",
      "Description": "Test conditional mapping",
      "InputType": "ControlChange",
      "DeviceName": "*",
      "Channel": 1,
      "ControllerNumber": 1,
      "Action": {
        "$type": "ConditionalConfig",
        "Conditions": [
          {
            "MinValue": 0,
            "MaxValue": 63,
            "Action": {
              "$type": "KeyPressReleaseConfig",
              "VirtualKeyCode": 88,
              "Description": "Press X key (low value)"
            },
            "Description": "Low fader value"
          },
          {
            "MinValue": 64,
            "MaxValue": 127,
            "Action": {
              "$type": "KeyPressReleaseConfig",
              "VirtualKeyCode": 89,
              "Description": "Press Y key (high value)"
            },
            "Description": "High fader value"
          }
        ],
        "Description": "Fader to X/Y keys"
      }
    }
  ]
}
