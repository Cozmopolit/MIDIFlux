{
  "ProfileName": "Relative CC Demo Profile",
  "Description": "Demonstration profile for RelativeCCAction with scratch wheels and encoders",
  "MidiDevices": [
    {
      "DeviceName": "*",
      "Mappings": [
        {
          "Id": "scratch-wheel-scroll",
          "Description": "Scratch wheel controls mouse scroll",
          "InputType": "ControlChange",
          "Channel": 1,
          "ControllerNumber": 65,
          "Action": {
            "$type": "RelativeCCConfig",
            "IncreaseAction": {
              "$type": "MouseScrollConfig",
              "Direction": "Up",
              "Amount": 1,
              "Description": "Scroll up"
            },
            "DecreaseAction": {
              "$type": "MouseScrollConfig",
              "Direction": "Down",
              "Amount": 1,
              "Description": "Scroll down"
            },
            "Description": "Scratch wheel mouse scroll"
          }
        },
        {
          "Id": "encoder-volume",
          "Description": "Endless encoder controls system volume",
          "InputType": "ControlChange",
          "Channel": 1,
          "ControllerNumber": 17,
          "Action": {
            "$type": "RelativeCCConfig",
            "IncreaseAction": {
              "$type": "KeyPressReleaseConfig",
              "VirtualKeyCode": 175,
              "Description": "Volume Up"
            },
            "DecreaseAction": {
              "$type": "KeyPressReleaseConfig",
              "VirtualKeyCode": 174,
              "Description": "Volume Down"
            },
            "Description": "Encoder volume control"
          }
        },
        {
          "Id": "jog-wheel-horizontal-scroll",
          "Description": "Jog wheel controls horizontal scroll",
          "InputType": "ControlChange",
          "Channel": 1,
          "ControllerNumber": 18,
          "Action": {
            "$type": "RelativeCCConfig",
            "IncreaseAction": {
              "$type": "MouseScrollConfig",
              "Direction": "Right",
              "Amount": 1,
              "Description": "Scroll right"
            },
            "DecreaseAction": {
              "$type": "MouseScrollConfig",
              "Direction": "Left",
              "Amount": 1,
              "Description": "Scroll left"
            },
            "Description": "Jog wheel horizontal scroll"
          }
        },
        {
          "Id": "encoder-brightness",
          "Description": "Encoder controls screen brightness",
          "InputType": "ControlChange",
          "Channel": 1,
          "ControllerNumber": 19,
          "Action": {
            "$type": "RelativeCCConfig",
            "IncreaseAction": {
              "$type": "SequenceConfig",
              "SubActions": [
                {
                  "$type": "KeyDownConfig",
                  "VirtualKeyCode": 91,
                  "Description": "Press Windows key"
                },
                {
                  "$type": "KeyPressReleaseConfig",
                  "VirtualKeyCode": 107,
                  "Description": "Press Plus"
                },
                {
                  "$type": "KeyUpConfig",
                  "VirtualKeyCode": 91,
                  "Description": "Release Windows key"
                }
              ],
              "Description": "Brightness up (Win + Plus)"
            },
            "DecreaseAction": {
              "$type": "SequenceConfig",
              "SubActions": [
                {
                  "$type": "KeyDownConfig",
                  "VirtualKeyCode": 91,
                  "Description": "Press Windows key"
                },
                {
                  "$type": "KeyPressReleaseConfig",
                  "VirtualKeyCode": 109,
                  "Description": "Press Minus"
                },
                {
                  "$type": "KeyUpConfig",
                  "VirtualKeyCode": 91,
                  "Description": "Release Windows key"
                }
              ],
              "Description": "Brightness down (Win + Minus)"
            },
            "Description": "Encoder brightness control with complex actions"
          }
        }
      ]
    }
  ]
}
