{
  "ProfileName": "SysEx Pattern Matching Demo",
  "Description": "Demonstrates SysEx input pattern matching capabilities",
  "MidiDevices": [
    {
      "DeviceName": "*",
      "Description": "Any MIDI device - SysEx pattern examples",
      "Mappings": [
        {
          "Id": "launchpad-button-press",
          "Description": "Launchpad button press (example pattern)",
          "InputType": "SysEx",
          "Channel": null,
          "SysExPattern": "F0 00 20 29 02 18 0A 24 7F F7",
          "Action": {
            "$type": "KeyPressReleaseConfig",
            "VirtualKeyCode": 65,
            "Description": "Press A key when Launchpad button pressed"
          }
        },
        {
          "Id": "generic-device-config",
          "Description": "Generic device configuration message",
          "InputType": "SysEx",
          "Channel": null,
          "SysExPattern": "F0 43 12 00 41 30 00 F7",
          "Action": {
            "$type": "SequenceConfig",
            "SubActions": [
              {
                "$type": "KeyPressReleaseConfig",
                "VirtualKeyCode": 32,
                "Description": "Press Spacebar"
              },
              {
                "$type": "DelayConfig",
                "Milliseconds": 100,
                "Description": "Wait 100ms"
              },
              {
                "$type": "KeyPressReleaseConfig",
                "VirtualKeyCode": 13,
                "Description": "Press Enter"
              }
            ],
            "ErrorHandling": "ContinueOnError",
            "Description": "Device configuration sequence"
          }
        },
        {
          "Id": "device-status-query",
          "Description": "Device status query response",
          "InputType": "SysEx",
          "Channel": null,
          "SysExPattern": "F0 7E 00 06 02 F7",
          "Action": {
            "$type": "CommandExecutionConfig",
            "Command": "echo Device status received",
            "ShellType": "PowerShell",
            "Description": "Log device status"
          }
        },
        {
          "Id": "custom-controller-message",
          "Description": "Custom controller specific message",
          "InputType": "SysEx",
          "Channel": null,
          "SysExPattern": "F0 00 01 02 03 04 05 F7",
          "Action": {
            "$type": "MouseClickConfig",
            "Button": "Left",
            "Description": "Left mouse click on custom message"
          }
        },
        {
          "Id": "alternating-sysex-demo",
          "Description": "Alternating action triggered by SysEx",
          "InputType": "SysEx",
          "Channel": null,
          "SysExPattern": "F0 40 00 01 F7",
          "Action": {
            "$type": "AlternatingActionConfig",
            "PrimaryAction": {
              "$type": "KeyPressReleaseConfig",
              "VirtualKeyCode": 77,
              "Description": "Press M key (Mute)"
            },
            "SecondaryAction": {
              "$type": "KeyPressReleaseConfig",
              "VirtualKeyCode": 85,
              "Description": "Press U key (Unmute)"
            },
            "StartWithPrimary": true,
            "StateKey": "SysExMuteToggle",
            "Description": "Toggle mute/unmute with SysEx"
          }
        },
        {
          "Id": "regular-note-for-comparison",
          "Description": "Regular note mapping for comparison",
          "InputType": "NoteOn",
          "Channel": 1,
          "Note": 60,
          "Action": {
            "$type": "KeyPressReleaseConfig",
            "VirtualKeyCode": 67,
            "Description": "Press C key (regular MIDI note)"
          }
        }
      ]
    }
  ],
  "InitialStates": {
    "SysExMuteToggle": 0
  }
}
