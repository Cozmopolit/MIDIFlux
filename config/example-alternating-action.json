{
  "ProfileName": "AlternatingAction Demo Profile",
  "Description": "Demonstration profile for AlternatingAction wrapper functionality",
  "InitialStates": {
    "RecordingMode": 0,
    "PlaybackMode": 0
  },
  "MidiDevices": [
    {
      "InputProfile": "AlternatingActionDemo",
      "DeviceName": "*",
      "MidiChannels": [1],
      "Mappings": [
        {
          "Id": "play-pause-toggle",
          "Description": "Simple play/pause toggle using AlternatingAction",
          "InputType": "NoteOn",
          "Channel": 1,
          "Note": 60,
          "Action": {
            "$type": "AlternatingActionConfig",
            "PrimaryAction": {
              "$type": "KeyPressReleaseConfig",
              "VirtualKeyCode": 32,
              "Description": "Play (Spacebar)"
            },
            "SecondaryAction": {
              "$type": "KeyPressReleaseConfig",
              "VirtualKeyCode": 32,
              "Description": "Pause (Spacebar)"
            },
            "StartWithPrimary": true,
            "StateKey": "PlayPauseToggle",
            "Description": "Toggle between play and pause"
          }
        },
        {
          "Id": "record-stop-toggle",
          "Description": "Record/Stop toggle with different keys",
          "InputType": "NoteOn",
          "Channel": 1,
          "Note": 61,
          "Action": {
            "$type": "AlternatingActionConfig",
            "PrimaryAction": {
              "$type": "KeyPressReleaseConfig",
              "VirtualKeyCode": 82,
              "Description": "Start Recording (R key)"
            },
            "SecondaryAction": {
              "$type": "KeyPressReleaseConfig",
              "VirtualKeyCode": 83,
              "Description": "Stop Recording (S key)"
            },
            "StartWithPrimary": true,
            "StateKey": "RecordStopToggle",
            "Description": "Toggle between record and stop"
          }
        },
        {
          "Id": "complex-alternating-sequence",
          "Description": "Alternating between complex sequences",
          "InputType": "NoteOn",
          "Channel": 1,
          "Note": 62,
          "Action": {
            "$type": "AlternatingActionConfig",
            "PrimaryAction": {
              "$type": "SequenceConfig",
              "SubActions": [
                {
                  "$type": "KeyPressReleaseConfig",
                  "VirtualKeyCode": 17,
                  "Description": "Ctrl"
                },
                {
                  "$type": "KeyPressReleaseConfig",
                  "VirtualKeyCode": 65,
                  "Description": "A (Select All)"
                }
              ],
              "ErrorHandling": "ContinueOnError",
              "Description": "Select All sequence"
            },
            "SecondaryAction": {
              "$type": "SequenceConfig",
              "SubActions": [
                {
                  "$type": "KeyPressReleaseConfig",
                  "VirtualKeyCode": 17,
                  "Description": "Ctrl"
                },
                {
                  "$type": "KeyPressReleaseConfig",
                  "VirtualKeyCode": 67,
                  "Description": "C (Copy)"
                }
              ],
              "ErrorHandling": "ContinueOnError",
              "Description": "Copy sequence"
            },
            "StartWithPrimary": true,
            "StateKey": "SelectCopyToggle",
            "Description": "Alternate between Select All and Copy"
          }
        },
        {
          "Id": "auto-generated-state-key",
          "Description": "AlternatingAction with auto-generated state key",
          "InputType": "NoteOn",
          "Channel": 1,
          "Note": 63,
          "Action": {
            "$type": "AlternatingActionConfig",
            "PrimaryAction": {
              "$type": "KeyPressReleaseConfig",
              "VirtualKeyCode": 37,
              "Description": "Left Arrow"
            },
            "SecondaryAction": {
              "$type": "KeyPressReleaseConfig",
              "VirtualKeyCode": 39,
              "Description": "Right Arrow"
            },
            "StartWithPrimary": true,
            "Description": "Toggle between left and right arrows (auto state key)"
          }
        },
        {
          "Id": "start-with-secondary",
          "Description": "AlternatingAction starting with secondary action",
          "InputType": "NoteOn",
          "Channel": 1,
          "Note": 64,
          "Action": {
            "$type": "AlternatingActionConfig",
            "PrimaryAction": {
              "$type": "KeyPressReleaseConfig",
              "VirtualKeyCode": 38,
              "Description": "Up Arrow"
            },
            "SecondaryAction": {
              "$type": "KeyPressReleaseConfig",
              "VirtualKeyCode": 40,
              "Description": "Down Arrow"
            },
            "StartWithPrimary": false,
            "StateKey": "UpDownToggle",
            "Description": "Toggle between up and down arrows (starts with down)"
          }
        }
      ]
    }
  ]
}
