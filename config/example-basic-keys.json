{
  "ProfileName": "Basic Keyboard Shortcuts",
  "Description": "Common keyboard shortcuts mapped to MIDI notes - perfect for productivity workflows",
  "MidiDevices": [
    {
      "DeviceName": "*",
      "Description": "Any MIDI device",
      "Mappings": [
        {
          "Id": "copy-shortcut",
          "Description": "Copy (Ctrl+C)",
          "InputType": "NoteOn",
          "Channel": 1,
          "Note": 52,
          "Action": {
            "$type": "SequenceConfig",
            "SubActions": [
              {
                "$type": "KeyDownConfig",
                "VirtualKeyCode": 17,
                "Description": "Ctrl down"
              },
              {
                "$type": "KeyPressReleaseConfig",
                "VirtualKeyCode": 67,
                "Description": "Press C"
              },
              {
                "$type": "KeyUpConfig",
                "VirtualKeyCode": 17,
                "Description": "Ctrl up"
              }
            ],
            "ErrorHandling": "StopOnError",
            "Description": "Ctrl+C copy sequence"
          }
        },
