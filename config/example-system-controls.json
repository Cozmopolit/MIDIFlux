{
  "ProfileName": "System Controls",
  "Description": "System volume control and mouse actions for media and navigation",
  "MidiDevices": [
    {
      "DeviceName": "*",
      "Description": "Any MIDI device",
      "Mappings": [
        {
          "Id": "volume-fader",
          "Description": "Volume control via CC fader",
          "InputType": "ControlChange",
          "Channel": 1,
          "ControllerNumber": 7,
          "Action": {
            "$type": "ConditionalConfig",
            "Conditions": [
              {
                "MinValue": 0,
                "MaxValue": 10,
                "Action": {
                  "$type": "SequenceConfig",
                  "SubActions": [
                    {
                      "$type": "KeyPressReleaseConfig",
                      "VirtualKeyCode": 173,
                      "Description": "Volume Mute"
                    }
                  ],
                  "ErrorHandling": "ContinueOnError",
                  "Description": "Mute volume"
                },
                "Description": "Very low fader -> Mute"
              },
              {
                "MinValue": 11,
                "MaxValue": 50,
                "Action": {
                  "$type": "SequenceConfig",
                  "SubActions": [
                    {
                      "$type": "KeyPressReleaseConfig",
                      "VirtualKeyCode": 174,
                      "Description": "Volume Down"
                    },
                    {
                      "$type": "KeyPressReleaseConfig",
                      "VirtualKeyCode": 174,
                      "Description": "Volume Down"
                    },
                    {
                      "$type": "KeyPressReleaseConfig",
                      "VirtualKeyCode": 174,
                      "Description": "Volume Down"
                    }
                  ],
                  "ErrorHandling": "ContinueOnError",
                  "Description": "Lower volume significantly"
                },
                "Description": "Low fader -> Volume down"
              },
              {
                "MinValue": 51,
                "MaxValue": 76,
                "Action": {
                  "$type": "KeyPressReleaseConfig",
                  "VirtualKeyCode": 174,
                  "Description": "Volume Down"
                },
                "Description": "Medium-low fader -> Volume down slightly"
              },
              {
                "MinValue": 77,
                "MaxValue": 100,
                "Action": {
                  "$type": "KeyPressReleaseConfig",
                  "VirtualKeyCode": 175,
                  "Description": "Volume Up"
                },
                "Description": "Medium-high fader -> Volume up slightly"
              },
              {
                "MinValue": 101,
                "MaxValue": 127,
                "Action": {
                  "$type": "SequenceConfig",
                  "SubActions": [
                    {
                      "$type": "KeyPressReleaseConfig",
                      "VirtualKeyCode": 175,
                      "Description": "Volume Up"
                    },
                    {
                      "$type": "KeyPressReleaseConfig",
                      "VirtualKeyCode": 175,
                      "Description": "Volume Up"
                    },
                    {
                      "$type": "KeyPressReleaseConfig",
                      "VirtualKeyCode": 175,
                      "Description": "Volume Up"
                    }
                  ],
                  "ErrorHandling": "ContinueOnError",
                  "Description": "Raise volume significantly"
                },
                "Description": "High fader -> Volume up"
              }
            ],
            "Description": "Volume control based on fader position"
          }
        },
        {
          "Id": "media-play-pause",
          "Description": "Media Play/Pause",
          "InputType": "NoteOn",
          "Channel": 1,
          "Note": 36,
          "Action": {
            "$type": "KeyPressReleaseConfig",
            "VirtualKeyCode": 179,
            "Description": "Media Play/Pause"
          }
        },
        {
          "Id": "media-stop",
          "Description": "Media Stop",
          "InputType": "NoteOn",
          "Channel": 1,
          "Note": 37,
          "Action": {
            "$type": "KeyPressReleaseConfig",
            "VirtualKeyCode": 178,
            "Description": "Media Stop"
          }
        },
        {
          "Id": "media-previous",
          "Description": "Previous Track",
          "InputType": "NoteOn",
          "Channel": 1,
          "Note": 38,
          "Action": {
            "$type": "KeyPressReleaseConfig",
            "VirtualKeyCode": 177,
            "Description": "Media Previous Track"
          }
        },
        {
          "Id": "media-next",
          "Description": "Next Track",
          "InputType": "NoteOn",
          "Channel": 1,
          "Note": 39,
          "Action": {
            "$type": "KeyPressReleaseConfig",
            "VirtualKeyCode": 176,
            "Description": "Media Next Track"
          }
        },
        {
          "Id": "mouse-scroll-up",
          "Description": "Mouse scroll up",
          "InputType": "NoteOn",
          "Channel": 1,
          "Note": 40,
          "Action": {
            "$type": "MouseScrollConfig",
            "Direction": "Up",
            "Amount": 3,
            "Description": "Scroll up 3 steps"
          }
        },
        {
          "Id": "mouse-scroll-down",
          "Description": "Mouse scroll down",
          "InputType": "NoteOn",
          "Channel": 1,
          "Note": 41,
          "Action": {
            "$type": "MouseScrollConfig",
            "Direction": "Down",
            "Amount": 3,
            "Description": "Scroll down 3 steps"
          }
        },
        {
          "Id": "left-click",
          "Description": "Left mouse click",
          "InputType": "NoteOn",
          "Channel": 1,
          "Note": 42,
          "Action": {
            "$type": "MouseClickConfig",
            "Button": "Left",
            "Description": "Left mouse click"
          }
        },
        {
          "Id": "right-click",
          "Description": "Right mouse click",
          "InputType": "NoteOn",
          "Channel": 1,
          "Note": 43,
          "Action": {
            "$type": "MouseClickConfig",
            "Button": "Right",
            "Description": "Right mouse click"
          }
        },
        {
          "Id": "middle-click",
          "Description": "Middle mouse click",
          "InputType": "NoteOn",
          "Channel": 1,
          "Note": 44,
          "Action": {
            "$type": "MouseClickConfig",
            "Button": "Middle",
            "Description": "Middle mouse click"
          }
        }
      ]
    }
  ]
}
